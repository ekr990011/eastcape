<% provide(:title, "Contact Us") %>
<% if flash[:danger] %>
    <div class="alert alert-danger"><%= flash[:danger] %></div>
<% end %>

<div class="col-xs-12 contact-form">
  
<%= form_for @contact do |f| %>
  
<div class="col-xs-6 form-group contact-input">
<h1><%= f.label :Feedback %></h1>
<%= f.text_area :text, class: "input-lg form-control", rows: "10" %><br>

<%= f.invisible_captcha :website %>

<%= f.label :email  %>
<%= f.text_area :email, class: "input-lg form-control", rows: "1" %><br>


<%= f.submit "Send Feedback", class: "btn btn-primary btn-lg" %>

</div>
<% end %>

</div>