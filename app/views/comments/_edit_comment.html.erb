
<%= form_for([@forum, @forum.comments.build], url: edit_forum_comment_path(@comment), html: {method: "patch"}) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :reply %><br>
    <%= f.text_area :reply %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>



