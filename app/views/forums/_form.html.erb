<% if flash[:alert] %>
    <div class="alert-danger"><%= flash[:alert] %></div>
<% end %>
<br>

<%= form_for @forum do |f| %>
    <% if @forum.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@forum.errors.count, "error") %> prohibited
              this article from being saved:
        </h2>
        <% @forum.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </div>
    <% end %>
 
    <div class="col-md-11 cptitle form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control input-lg" %>
    </div>
 
    <div class="col-md-12 cppost form-group" 
      <%= f.label :post %><br>
      <%= f.text_area :post, class: "form-control input-lg", rows: "10" %>
    </div>
    
    <div class="col-md-4">
    <%= f.submit "Create Post", class: "btn btn-primary btn-lg" %>
    </div>
<% end %>