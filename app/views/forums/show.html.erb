
<% provide(:title, "Post") %>

<% if flash[:success] %>
    <div class="alert alert-success"><%= flash[:success] %></div>
    <% elsif flash[:danger] %>
    <div class="alert alert-danger"><%= flash[:danger] %></div>
    <% else %>
<% end %>

<div>
posted by:
<% if @forum.user_id.nil? %>
Anonymous
<% else %>
<%= User.find(@forum.user_id).username %>
<% end %>
<br />
</div>

<%= render 'forums/forum_post' %>

<br>
<h4>Comments:</h4>
<%= pluralize(@comment.count, "Reply") %>
<%= render @forum.comments %>
<br>

<h3>Add a comment:</h3>

<%= render 'comments/comment_form' %>