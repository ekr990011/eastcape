<% provide(:title, "Post") %>

<% if flash[:success] %>
    <div class="alert-success"><%= flash[:success] %></div>
<% end %>

posted by: <%= User.find(@forum.user_id).username %>

<p>
  <strong>Title:</strong>
  <%= @forum.title %>
</p>
 
<p>
  <strong>Post:</strong>
  <%= @forum.post %>
</p>

<h2>Comments:</h2>
<%= render @forum.comments %>
<br>

<h2>Add a comment:</h2>

<%= form_for([@forum, @forum.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :reply %><br>
    <%= f.text_area :reply %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
