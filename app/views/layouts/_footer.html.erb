<footer class="header col-xs-12 col-sm-12 col-md-12">
   <% # nav bar/ login#out/ advertise?/ about? , here %>
   <% if current_user %>
   <div class="nav nav-tabs user-tab">
     <div><h4 class="above-all col-xs-12"><%= "User : " + current_user.username %></h4>
     <div class="col-xs-12 div-tp"></div>
     </div>
   </div>
   <% end %>
  <div class="headernav"> 
   <ul class="nav nav-tabs">
     <li><%= link_to "Home", root_path %></li>
     <li><%= link_to "Advertise", new_advertise_path %></li>
     <li><%= link_to "Contact", new_contact_path %></li>
     
     <% if session[:user_id].nil? %>
       <li><%= link_to "Login", new_session_path %></li>
       <li><%= link_to "Signup", new_user_path %></li>
       <div class="col-xs-12 div-tp"></div>
     <% else %>
       <li><%= link_to "Log out", logout_path, method: :delete,
                                           data: { confirm: "Are you sure?" } %>
       </li>
       <div class="col-xs-12 div-tp"></div>
     <% end %>
   </ul>
  </div>
    <%= image_tag(('water3.jpg'), class: "header_image") %>
</footer>
